{
  "name": "shipit-slack",
  "version": "0.0.1",
  "description": "Slack tasks for shipit.",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && node_modules/jest/bin/jest.js --forceExit --silent",
    "lint": "node_modules/eslint/bin/eslint.js *.js **/*.js __**__/**/*.js",
    "send-coverage": "cat ./coverage/lcov.info | node_modules/.bin/codacy-coverage -p ."
  },
  "jest": {
    "verbose": false,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "globals": {
      "__TEST__": true
    },
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "shipitfile.js",
      "tmp"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bingneef/shipit-slack.git"
  },
  "keywords": [
    "shipit",
    "deploy",
    "task",
    "slack"
  ],
  "author": {
    "name": "Bing Steup",
    "email": "bingsteup@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bingneef/shipit-slack/issues"
  },
  "homepage": "https://github.com/bingneef/shipit-slack",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^19.0.2",
    "shipit-cli": "^3.0.0",
    "shipit-deploy": "^2.4.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "moment": "^2.18.1",
    "node-slackr": "^0.1.4",
    "shipit-utils": "^1.4.0",
    "underscore.string": "^3.3.4"
  }
}
